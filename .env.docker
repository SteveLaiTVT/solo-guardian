# ==================================
# Database Configuration
# ==================================
POSTGRES_USER=solo_guardian
POSTGRES_PASSWORD=solo_guardian_pass
POSTGRES_DB=solo_guardian
POSTGRES_PORT=5432

# ==================================
# Redis Configuration
# ==================================
REDIS_PORT=6379

# ==================================
# Backend Configuration
# ==================================
BACKEND_PORT=3000
NODE_ENV=production

# ==================================
# CORS Origins (comma-separated)
# ==================================
# Add your Vercel domain here after deployment
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,https://your-app.vercel.app

# ==================================
# JWT Secrets (REQUIRED - Change in production!)
# ==================================
# Generate strong secrets using: openssl rand -base64 32
JWT_ACCESS_SECRET=change-this-to-a-secure-32-char-string-for-access-token
JWT_REFRESH_SECRET=change-this-to-a-secure-32-char-string-for-refresh-token

# ==================================
# Email Configuration (SMTP)
# ==================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ==================================
# SMS Configuration (Twilio)
# ==================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ==================================
# OAuth Configuration (Optional)
# ==================================
# Google OAuth
GOOGLE_OAUTH_ENABLED=false
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_CALLBACK_URL=http://localhost:3000/api/auth/oauth/google/callback

# Apple OAuth
APPLE_OAUTH_ENABLED=false
APPLE_OAUTH_CLIENT_ID=
APPLE_OAUTH_TEAM_ID=
APPLE_OAUTH_KEY_ID=
APPLE_OAUTH_PRIVATE_KEY=
APPLE_OAUTH_CALLBACK_URL=http://localhost:3000/api/auth/oauth/apple/callback

# ==================================
# Aliyun OSS Configuration (Optional)
# ==================================
ALIYUN_OSS_REGION=oss-cn-hangzhou
ALIYUN_OSS_ACCESS_KEY_ID=
ALIYUN_OSS_ACCESS_KEY_SECRET=
ALIYUN_OSS_BUCKET=
ALIYUN_OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com
ALIYUN_OSS_CDN_DOMAIN=
